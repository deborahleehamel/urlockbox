<!DOCTYPE html>
<html>
  <head>
    <title>Urlockbox</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse">
      <div class="container">
        <div class="navbar-header">
          <%= link_to 'URLockbox', root_path, class: 'navbar-brand' %>
        </div>
        <div class="collapse navbar-collapse" id="main-nav-collapse">
          <ul class="nav navbar-nav navbar-right">
            <% if current_user %>
              <div class="navbar-text">Hi, <%= current_user.email %> </div>
              <li><%= link_to "My URLockbox", links_path %> </li>
                <%= link_to "Log out", logout_path, method: :delete, class: "navbar-text" %>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

  <% flash.each do |type, message|  %>
    <%= content_tag :div, sanitize(message), class: "alert alert_#{type} admin-flash" %>
  <% end %>

    <%= yield %>
  </body>
</html>
